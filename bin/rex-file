#!/usr/bin/env perl

use Rex::CommandLine;
require Rex::Commands;
use Cwd 'getcwd';

$::rexfile = getcwd . "/Rexfile";

my $command = "file";

my $r = Rex::CommandLine->new;

my $exit_code = 0;

my $in;
my $tmp_file;

my $i = 0;
for (@ARGV) {
   if($_ eq "source") {
      $in = $ARGV[$i+1];
      last;
   }
   $i++;
}

if(! $in) {
   my $tmp_file = "/tmp/" . Rex::Commands::get_random(8, 'a' .. 'z') . ".tmp";
   open(my $fh, ">", $tmp_file) or die($!);
   print $fh <STDIN>;
   close($fh);

   push @ARGV, "source=$tmp_file";
}

eval {
   $r->call($command);
   1;
} or do {
   print STDERR "$@\n";
   $exit_code = 1;
};

unlink $tmp_file if $tmp_file;


exit $exit_code;
